{
  "name": "typescript-template",
  "version": "0.1.7",
  "description": "Frontend Performance Tool",
  "keywords": [
    "debug",
    "typescript"
  ],
  "homepage": "https://github.com/Himenon/TsPkgTemplate#readme",
  "bugs": {
    "url": "https://github.com/Himenon/TsPkgTemplate/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Himenon/FrontendPerformanceTool.git"
  },
  "license": "MIT",
  "author": "Himenon",
  "files": [
    "lib",
    "package.json"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "yarn run clean && tsc -p ./tsconfig.build.json",
    "build:watch": "yarn run build -- --watch",
    "clean": "rimraf ./lib",
    "cli": "node ./lib/cli.js",
    "commitlint": "commitlint",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "cruiser": "dependency-cruiser --validate .dependency-cruiser.json src",
    "format": "prettier --config .prettierrc --write src/*.{ts,tsx}",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "lint:fix": "yarn run lint -- --fix",
    "release:major": "changelog -M && git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md' && npm version major && git push origin && git push origin --tags",
    "release:minor": "changelog -m && git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md' && npm version minor && git push origin && git push origin --tags",
    "release:patch": "changelog -p && git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md' && npm version patch && git push origin && git push origin --tags",
    "server": "node ./lib/server.js",
    "start": "npm run build:watch",
    "test": "npm run cruiser && npm run test:jest",
    "test:ci": "yarn run test && codecov",
    "test:jest": "jest -c ./jest.config.json",
    "test:watch": "npm run test:jest -- --watch"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.7.1",
    "codecov": "^3.1.0",
    "dependency-cruiser": "^4.5.0",
    "generate-changelog": "^1.7.1",
    "husky": "^1.1.3",
    "jest": "^23.5.0",
    "jest-cli": "^23.5.0",
    "lint-staged": "^8.0.4",
    "prettier": "^1.14.2",
    "rimraf": "^2.6.2",
    "sort-package-json": "^1.16.0",
    "ts-jest": "^23.1.3",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.0.1"
  }
}
